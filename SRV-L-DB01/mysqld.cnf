[mysqld]
# USUARIO DO MYSQL
user            = mysql
# MYSQL ESCUTANDO SOMENTE NA INTERFACE LOCALHOST
# Se comentar bind-address consegue acessar base pelo ADMINER
# bind-address            = 127.0.0.1
bind-address = 0.0.0.0
skip-external-locking
# CONFIGURACOES AVANCADAS
key_buffer_size                = 16M
max_allowed_packet             = 64M
thread_stack                   = 256K
innodb_buffer_pool_size        = 500M
innodb-file-per-table          = 1
innodb_buffer_pool_instances   = 1
innodb_old_blocks_time         = 1000
innodb_stats_on_metadata       = off
innodb-flush-method            = O_DIRECT
tmp-table-size                 = 96M
max-heap-table-size            = 96M
open_files_limit               = 65535
max_connect_errors             = 1000000
connect_timeout                = 60
wait_timeout                   = 28800
# ATENCAO, SE VOCÃŠ TEM A INTENCAO DE USAR OS LOGS BINARIOS O MYSQL NAO DESATIVE ISSO
skip-log-bin
# DEFINICAO DE ARQUIVO DE LOG DE ERRO
log_error = /var/log/mysql/error.log
